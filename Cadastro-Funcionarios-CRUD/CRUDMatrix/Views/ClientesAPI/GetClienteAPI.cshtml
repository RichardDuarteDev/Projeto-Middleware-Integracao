@model IEnumerable<Cadastro_de_Funcionários.Models.ClientesAPIModel>
@using Cadastro_de_Funcionários.Models




<h2>Clientes da API</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Sexo</th>
            <th>Situação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.cpf</td>
                <td>@cliente.DataNascimento.ToShortDateString()</td>
                <td>@cliente.Sexo</td>
                <td>@cliente.SituacaoClienteId</td>
                <td>@(Enum.TryParse(typeof(Framework.SituacaoCliente), cliente.SituacaoClienteId, out var situacao) ? (Framework.SituacaoCliente)situacao : (Framework.SituacaoCliente)0)</td>

            </tr>
        }
    </tbody>
</table>
